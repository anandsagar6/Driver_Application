<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with border and rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>  <!-- Always white -->
            <stroke android:width="1dp" android:color="@color/lavender"/>  <!-- Black border -->
            <corners android:radius="8dp"/>
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Arrow icon aligned right -->
    <item
        android:drawable="@drawable/ic_arrow_down"
        android:gravity="center_vertical|right"
        android:right="12dp"/>

</layer-list>
