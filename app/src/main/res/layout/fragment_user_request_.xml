<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".RideDetail_Activity">

    <!-- Main vertical layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Map Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="20sp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/black">

            <org.osmdroid.views.MapView
                android:id="@+id/osmMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />
        </androidx.cardview.widget.CardView>

        <!-- Ride Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvRideType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Type:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance to Pickup: "
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/btn_reject_bg"
                android:elevation="4dp"
                android:layout_marginEnd="10dp"
                android:layout_margin="20dp"
                android:theme="@style/NoButtonTintTheme" />

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1.5"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="20dp"
                android:background="@drawable/btn_accept_bg"
                android:elevation="4dp"
                android:layout_marginStart="10dp"
                android:theme="@style/NoButtonTintTheme" />

        </LinearLayout>
    </LinearLayout>

    <!-- Fullscreen dim overlay -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- Centered ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
