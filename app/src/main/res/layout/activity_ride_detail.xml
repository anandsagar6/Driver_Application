<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:orientation="vertical"
    tools:context=".RideDetail_Activity">

    <!-- Map -->
    <org.osmdroid.views.MapView
        android:id="@+id/osmMap"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:clickable="true" />

    <!-- Ride Details Card -->
    <LinearLayout
        android:id="@+id/rideDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_margin="10dp"
        android:background="@drawable/bg_card"
        android:padding="20dp"

        >


    <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš– Status: --"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:padding="4dp" />

        <TextView
            android:id="@+id/pickupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Pickup: --"
            android:textSize="16sp"
            android:textColor="#444"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/destText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ Destination: --"
            android:textSize="16sp"
            android:textColor="#444"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/fareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Fare: --"
            android:textSize="16sp"
            android:textColor="#444"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Driver distance: --"
            android:textSize="16sp"
            android:textColor="#444"
            android:paddingTop="4dp" />

        <!-- Horizontal buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2"
            android:gravity="center">

            <Button
                android:id="@+id/startRideBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Ride"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/cancelRideBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel Ride"
                android:visibility="gone"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
