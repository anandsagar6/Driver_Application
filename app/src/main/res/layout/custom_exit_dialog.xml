<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration Required"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle registration is compulsory to use the app. Without registration, you cannot proceed. Are you sure you want to exit?"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="20dp" />

    <!-- Buttons Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"

        android:layout_marginTop="10dp">



        <!-- Exit Button -->
        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Exit App"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:theme="@style/NoButtonTintTheme"
            android:background="@drawable/btn_reject_bg"
            android:textSize="14sp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Continue"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:theme="@style/NoButtonTintTheme"
            android:textColor="@color/white"
            android:background="@drawable/btn_accept_bg"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>